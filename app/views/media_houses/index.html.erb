<p id="notice"><%= notice %></p>

<h1>Listing Media Houses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @media_houses.each do |media_house| %>
      <tr>
        <td><%= media_house.name %></td>
        <td><%= link_to 'Show', media_house %></td>
        <td><%= link_to 'Edit', edit_media_house_path(media_house) %></td>
        <td><%= link_to 'Destroy', media_house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

